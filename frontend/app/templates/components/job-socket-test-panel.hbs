<h3>Job Test Panel <small><a {{action "showHide"}}>Show/Hide</a></small></h3>
{{#if show}}
<textarea id="outputPane" rows=20 cols=120>
  {{#each messages as |line|}}
    {{line}}
  {{/each}}
</textarea>
<p>
<button {{action "start"}}>Start</button>
<button {{action "reset"}}>Reset</button>
</p>
<p>
  {{input value=jobText placeholder="Job Text"}}
  <button {{action "startJob"}}>Start Job</button>
</p>
{{/if}}
